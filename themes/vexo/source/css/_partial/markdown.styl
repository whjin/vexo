.markdown-content, .article-summary
  overflow-y: auto
  overflow-x: hidden
  pre, code
    font-family: 'Roboto Mono', Monaco, courier, monospace
    font-size: inherit
    @media m-mobile
      font-size: inherit
    .line
      margin: 2px 0
  p
    line-height: 1.6em
    margin-top: 10px
    code
      background-color: color-background
      color: color-orange
      margin: 0 2px
      border-radius: 3px
      white-space: nowrap
  h1, h2, h3, h4, h5, h6
    code
      color: color-orange
      margin: 0 2px
      white-space: nowrap
  h1
    font-size: 1.6em
  h2
    font-size: 1.4em
  h3
    margin: 1em 0
    font-size: 1.2em
    padding-bottom: .3em
    border-bottom: 1px solid color-border
  h4
    margin: 1em 0
    font-size: 1em
    &:before
      content: "#";
      color: color-primary
      margin-right: 5px
      font-size: 1.2em
      font-weight: 700
  h5
    font-size: .8em
    margin: .8em 0
  blockquote
    margin: 1em 0
    padding: 12px 20px
    border-left: 4px solid color-primary
    background: color-background
    border-bottom-right-radius: 2px
    border-top-right-radius: 2px
    p
      margin: auto
  ul, ol
    overflow: auto
    margin: 3px 0
    li
      padding: 3px 0
      p
        margin: auto
      code
        background-color: color-background
        color: color-orange
        margin: 0 2px
        border-radius: 2px
        white-space: nowrap
  img
    max-width: 100%
    display: block
    margin: 20px auto
    cursor: zoom-in
  figure
    background: color-background
    padding: 0 10px
    border-radius: 2px
    margin: 20px 0
    overflow: auto
    position: relative
    line-height: 1.3
    &:after
      content: attr(data-lang)
      position: absolute
      top: 0
      right: 0
      color: #ccc
      text-align: right
      font-size: 0.7em
      padding: 5px 10px 0
      line-height: 15px
      height: 15px
      font-weight: 500
  > table
    width: 100%
    border-collapse: collapse
    thead
      background-color: color-primary
      border-top-width: 1px
      border-top-style: solid
      border-top-color: color-border
      th
        padding: 5px 10px
        color: color-white
        border: 1px solid #ccc
        text-align: center
    tbody
      tr
        &:nth-child(even)
          background: #e6eed6
        &:nth-child(odd)
          background: color white
        td
          padding: 5px 10px
          border: 1px solid #ccc
          word-break: break-word
          code
            color: color-orange
            padding: 0 2px
          pre
            line-height: 1.6
        td:first-child
          text-align: center
          code
            white-space: nowrap
  hr
    border: none
    border-bottom: 1px dashed color-border
    margin: 30px 0